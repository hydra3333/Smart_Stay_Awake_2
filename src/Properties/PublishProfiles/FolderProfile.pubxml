<?xml version="1.0" encoding="utf-8"?>
<!-- https://go.microsoft.com/fwlink/?LinkID=208121. -->
<Project>
	<PropertyGroup>
		<!-- Build configuration: optimized, no debug symbols -->
		<Configuration>Release</Configuration>

		<!-- Platform: Any CPU in project settings, but overridden by RuntimeIdentifier below -->
		<Platform>Any CPU</Platform>

		<!-- Output location: relative to project folder (src/bin/Publish/) -->
		<!-- Alternative: absolute path like E:\SOFTWARE-Win11\Smart_Stay_Awake_2\dist -->
		<PublishDir>bin\Publish\</PublishDir>

		<PublishProtocol>FileSystem</PublishProtocol>
		<_TargetId>Folder</_TargetId>

		<!-- Target framework: .NET 8, Windows 10 version 2004+ (19041) -->
		<TargetFramework>net8.0-windows10.0.19041.0</TargetFramework>

		<!-- Runtime: Force 64-bit (x64) - won't run on 32-bit Windows -->
		<RuntimeIdentifier>win-x64</RuntimeIdentifier>

		<!-- Self-contained: Bundle .NET 8 runtime (~60MB), no installation needed -->
		<SelfContained>true</SelfContained>

		<!-- Single file: All DLLs bundled into one .exe -->
		<PublishSingleFile>true</PublishSingleFile>

		<!-- ReadyToRun: Pre-compile for faster startup (larger file) -->
		<PublishReadyToRun>true</PublishReadyToRun>

		<!-- Trimming disabled: Safe for P/Invoke and CsWin32 reflection -->
		<PublishTrimmed>false</PublishTrimmed>
	</PropertyGroup>
</Project>